<%= flash[:error] %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h2>ログイン</h2>
      <div class="field form-group">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'col-5 form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'col-5 form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :パスワードを記憶する %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-success" %>
        
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>