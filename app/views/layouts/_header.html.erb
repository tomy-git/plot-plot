<header class="bg-dark text-white">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-dark navbar-brand" href="/">プロット・プロット</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse">
    <%= form_with url:search_path, method: :get, local: true do |f| %>
      <form class="form-inline">
          <%= f.text_field 'search[value]', class: 'form-control' %>
          <%# 表示するとヘッダーが太くなるのでとりあえず･･･ %>
          <%#= f.select 'search[model]', options_for_select({ "User" => "user", "Plot" => "plot" }) %>
          <%#= f.select 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
          <%#= f.submit :"検索", class: 'btn btn-outline-success' %>
      </form>
    <% end %>
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              ようこそ <%= current_user.name %> さん
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to " MyPage", user_path(current_user.id), class: 'dropdown-item fas fa-user' %>
              <%= link_to " Users", users_path, class: 'dropdown-item fas fa-users' %>
              <%= link_to " Plots", plots_path, class: 'dropdown-item fas fa-book-open' %>
              <div class="dropdown-divider"></div>
              <%= link_to " logout", destroy_user_session_path, class: 'dropdown-item fas fa-sign-out-alt', method: :delete  %>
            </div>
          </li>
        <% else %>
          <li>
            <%= link_to " Home", root_path, class: 'nav-link text-light fas fa-home' %>
          </li>
          <li>
            <%= link_to " About", about_path, class: 'nav-link text-light fas fa-info-circle'%>
          </li>
          <li>
            <%= link_to " sign up", new_user_registration_path, class: 'nav-link text-light fas fa-user-plus' %>
          </li>
          <li>
            <%= link_to " login", new_user_session_path, class: 'nav-link text-light fas fa-sign-in-alt' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>