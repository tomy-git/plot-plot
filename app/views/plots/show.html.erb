<div class="row mt-3">
  <div class="col-8 offset-4">
    <h1 class="title"><%= @plot.title %></h1>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8 offset-4">
    <%== @plot.body %>
  </div>
</div>

<div class="row mt-5">
  <div class="media">
    <img class="d-flex mr-3" data-src="holder.js/64x64?theme=sky" alt="64x64" style="width: 64px; height: 64px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2264%22%20height%3D%2264%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2064%2064%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_17861939046%20text%20%7B%20fill%3A%23FFFFFF%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A10pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_17861939046%22%3E%3Crect%20width%3D%2264%22%20height%3D%2264%22%20fill%3D%22%230D8FDB%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.5%22%20y%3D%2236.5%22%3E64x64%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
    <div class="media-body">
      <h4 class="mt-0"></h4>
      <h5 class="mt-1"></h5>
    </div>
  </div>
</div>
<div id="likes">
  <%= render partial: 'likes/like', locals: { plot: @plot } %>
</div>
<div class="row">
  <% @plot_tags.each do |tag| %>
  <%= link_to tag.tag_name, tag_plots_path(tag_id: tag.id) %>
  <%= "(#{tag.plots.count})" %>
<% end %>
</div>
<div class="row">
  <%= link_to '戻る', plots_path %>
  <%= link_to '編集', edit_plot_path %>
  <%= link_to '削除', plot_path, method: :delete %>
</div>
<div class="row comment-create">
  <% if user_signed_in? %>
    <%= render partial: 'comments/form', locals: { comment: @comment, plot: @plot } %>
  <% end %>
</div>
<div class="row">
  <div id="comment_area">
    <%= render partial: 'comments/index', locals: { comments: @comments } %>
  </div>
</div>