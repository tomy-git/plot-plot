<div class="row">
  <div class="col-6">
    <h1 class="title">投稿作品</h1>
  </div>
  <div class="col-6 d-flex flex-wrap align-content-center">
    <h5><%= user.name %>さんは <%= user.plots.count %> 個の投稿をしています</h5>
  </div>
</div>
<table class="table table-hover mt-3">
  <thead class="thead-dark">
    <tr>
      <th>タイトル</th>
      <th>いいね数</th>
      <th>投稿日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% user.plots.each do |plot| %>
    <tr>
      <th scope="row">
        <%= plot.title %>
      </th>
      <td>
        <%= plot.likes.count %> いいね
      </td>
      <td>
        <%= plot.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
      <td>
        <%= link_to '作品を読む', plot_path(plot.id), class: 'btn btn-success' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>