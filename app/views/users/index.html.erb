  <h1 class="title">ユーザー一覧</h1>
  <h4>あなたイチオシのクリエイターを見つけよう！</h4>
<% @users.each do |user| %>
  <%= link_to user_path(user.id) do %>
    <%= attachment_image_tag user, :icon, size: '100x100', fallback: 'no_image.png' %>
    <%= user.name %>
  <% end %>
  <%= user.email %>
  <%= user.introduction %>
<% end %>